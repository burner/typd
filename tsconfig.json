{
  "compilerOptions": {
    "declaration": true,
    "inlineSources": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "esnext"
  },
  "rootDirs": ["src", "tests"]
}
